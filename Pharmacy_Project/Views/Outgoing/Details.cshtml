@model Pharmacy_Project.Models.Outgoing

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробнее</h1>

<div>
    <h4>Расход</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата реализации
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImplementationDate)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            Цена продажи
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellingPrice)
        </dd>
        <dt class = "col-sm-2">
            Название лекарства
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medicine.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a>
    }
    <a asp-action="Index">Назад на страницу</a>
</div>
