@model Pharmacy_Project.Models.Medicine

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробнее</h1>

<div>
    <h4>Лекарство</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            Вещество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActiveSubstance)
        </dd>
        <dt class = "col-sm-2">
            Единица измерения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitMeasurement)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt class = "col-sm-2">
            Хранилище
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StorageLocation)
        </dd>
        <dt class = "col-sm-2">
            Производитель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producer.Name)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a>
    }
  
    <a asp-action="Index">Назад на страницу</a>
</div>
